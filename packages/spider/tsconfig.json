{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "#utils": ["src/utils/index.ts"],
      "#utils/*": ["src/utils/*"],
      "#types/*": ["src/types/*"],
      "#fetcher/*": ["src/fetcher/*"],
      "#routers/*": ["src/routers/*"],
      "#logger": ["src/utils/logger.ts"],
      "#services/*": ["src/services/*"],
      "#db/*": ["src/db/*"],
      "#spider": ["src/spider/index.ts"]
    }
  },

  "include": ["src/**/*.ts", "mock/**/*.ts", "sql/**/*.ts"]
}
