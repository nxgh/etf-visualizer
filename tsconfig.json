{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "#components/*": ["./src/components/*"],
      "#actions/*": ["./src/actions/*"],
      "@shadcn/*": ["./src/@shadcn/*"],
      "@shadcn": ["./src/@shadcn/index.ts"],
      "#store": ["./src/stores/index.ts"],
      "#stores/*": ["./src/stores/*"],
      "#styles/*": ["./src/styles/*"],
      "#utils/*": ["./src/utils/*"],
      "#server/*": ["./server/*"],
      "#layouts/*": ["./src/layouts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/global.d.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
